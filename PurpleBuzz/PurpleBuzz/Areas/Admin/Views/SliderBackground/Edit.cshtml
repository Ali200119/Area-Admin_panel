@model SliderBackground

@{
    ViewBag.Title = "Edit Slider Background";
}

<form>
    <div style="display: flex; justify-content: center; margin-top: 30px">
        <div class="custom-file">
            <input type="file"
                   class="custom-file-input"
                   id="validatedCustomFile"
                   required />
            <label class="custom-file-label"
                   for="validatedCustomFile">Choose file...</label>
            <div class="invalid-feedback">
                Example invalid custom file feedback
            </div>
        </div>

        <button class="btn btn-success mt-5" type="submit">Save changes</button>

        <a class="btn btn-primary mt-5" asp-area="Admin" asp-controller="SliderBackground" asp-action="Index">Back</a>
    </div>
</form>