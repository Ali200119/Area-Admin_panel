@model Work

@{
    ViewBag.Title = "Create Work";
}

<div class="container mt-5">
    <form>
        <div class="custom-file">
            <input type="file"
                   class="custom-file-input"
                   id="validatedCustomFile"
                   required />
            <label class="custom-file-label"
                   for="validatedCustomFile">Choose file...</label>
            <div class="invalid-feedback">
                Example invalid custom file feedback
            </div>
        </div>

        <div class="form-group row mt-5">
            <label for="fdesc"
                   class="col-sm-3 text-end control-label col-form-label">Description</label>
            <div class="col-sm-9">
                <input type="text"
                       class="form-control"
                       id="fdesc"
                       placeholder="Description Here" />
            </div>
        </div>

        <button class="btn btn-success mt-5" type="submit">Create</button>

        <a style="width: 60px;" class="btn btn-primary mt-5" asp-area="Admin" asp-controller="Work" asp-action="Index">Back</a>
    </form>
</div>